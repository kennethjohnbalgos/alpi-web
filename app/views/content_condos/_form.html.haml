= form_for @content_condo do |f|
  -if @content_condo.errors.any?
    #error_explanation
      %h2= "#{pluralize(@content_condo.errors.count, "error")} prohibited this content_condo from being saved:"
      %ul
        - @content_condo.errors.full_messages.each do |msg|
          %li= msg

  .field
    %br/
    = f.text_field :title
          
  .field
    = f.cktext_area :context, :width => 770, :height => 450
  %br/
  .actions
    = f.submit 'Save Changes'
